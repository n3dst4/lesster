extends responsive

block vars
    - var page = undefined

block responsive-body
    .row
        .span3
            ul.nav.nav-pills.nav-stacked
                li(class=page=="account"?"active":"")
                    a(href="/account") Account details
                li(class=page=="lessters"?"active":"")
                    a(href="/{{user._id}}/lessters") Your Lessters
                li(class=page=="changepassword"?"active":"")
                    a(href="/change-password") Change password
                li(class=page=="billabong"?"active":"")
                    a(href="/billabong") Billabong details
        .span9
            block account-body

block append scripts
    script(type='text/javascript')
        window.lesster.on("authDetailsChanged", function () {location.reload()} );
    
